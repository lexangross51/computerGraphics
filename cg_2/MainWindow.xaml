<Window x:Class="cg_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" KeyDown="MainWindow_OnKeyDown">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <sharpGL:OpenGLControl Grid.Column="0" OpenGLDraw="OpenGLControl_OnOpenGLDraw"
                               OpenGLInitialized="OpenGLControl_OnOpenGLInitialized"
                               MouseMove="OpenGLControl_OnMouseMove"
                               RenderContextType="FBO" />

        <StackPanel Grid.Column="1">
            <GroupBox
                FontSize="11"
                Header="Отображение"
                Padding="4"
                Margin="5, 0, 5, 0"
                Width="{Binding ElementName=MainGrid }" Height="130"
                VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock>Режим</TextBlock>
                    <RadioButton
                        GroupName="View"
                        x:Name="WireframeMode"
                        IsChecked="False"
                        Content="Каркас"
                        Checked="RadioButtonChecked" />
                    <RadioButton
                        GroupName="View"
                        x:Name="LayoutMode"
                        IsChecked="True"
                        Content="Макет"
                        Checked="RadioButtonChecked" />

                    <TextBlock Margin="0, 15, 0, 0">Вид</TextBlock>
                    <RadioButton
                        GroupName="Projection"
                        x:Name="PerspectiveMode"
                        IsChecked="True"
                        Content="Перспективная проекция"
                        Checked="RadioButtonChecked" />
                    <RadioButton
                        GroupName="Projection"
                        x:Name="OrthographicMode"
                        IsChecked="False"
                        Content="Ортографическая проекция"
                        Checked="RadioButtonChecked" />

                </StackPanel>
            </GroupBox>

            <GroupBox
                FontSize="11"
                Header="Настройки камеры"
                Margin="5, 5, 5, 0"
                Padding="4">

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Margin="-5, 0,0, 0" Content="Скорость" />
                        <Slider Name="CameraSpeed"
                                Minimum="1"
                                Maximum="10"
                                TickPlacement="BottomRight"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Margin="0, 3, 0, 0"
                                Width="178"
                                ValueChanged="SliderValueChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Margin="-5, 0,0, 0" Content="Чувствительность" />
                        <Slider Name="CameraSensitivity"
                                Minimum="0.1"
                                Maximum="0.3"
                                TickPlacement="BottomRight"
                                TickFrequency="0.01"
                                Margin="0, 3, 0, 0"
                                Width="135"
                                ValueChanged="SliderValueChanged" />
                    </StackPanel>
                </StackPanel>

            </GroupBox>

            <GroupBox
                FontSize="11"
                Header="Нормали"
                Padding="4"
                Margin="5, 5, 5, 0">

                <StackPanel>
                    <CheckBox
                        x:Name="ShowNormalsCheckBox"
                        Checked="CheckBoxChecked"
                        Unchecked="CheckBoxChecked"
                        IsChecked="False"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Content="Показывать нормали" />
                    
                    <RadioButton
                        GroupName="Normals"
                        x:Name="NormalsButton"
                        Content="Несглаженные нормали"
                        IsChecked="True"
                        Checked="RadioButtonChecked"/>
                    <RadioButton 
                        GroupName="Normals"
                        x:Name="SmoothedNormalsButton"
                        Content="Сглаженные нормали"
                        IsChecked="False"
                        Checked="RadioButtonChecked"/>
                </StackPanel>
                
            </GroupBox>

            <GroupBox
                FontSize="11"
                Header="Текстурирование"
                Margin="5, 5, 5, 0"
                Padding="4">
                <ComboBox Name="TextureName">
                    <TextBlock>Нет текстуры</TextBlock>
                    <TextBlock>Текстура_1</TextBlock>
                    <TextBlock>Текстура_2</TextBlock>
                </ComboBox>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>