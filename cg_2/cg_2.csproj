<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="GlmNet" Version="0.7.0" />
		<PackageReference Include="SharpGL" Version="3.1.1" />
		<PackageReference Include="SharpGL.SceneGraph" Version="3.1.1" />
		<PackageReference Include="SharpGL.WPF" Version="3.1.1" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="System" />
		<Using Include="System.Windows" />
		<Using Include="System.Diagnostics" />
		<Using Include="System.Windows.Input" />
		<Using Include="GlmNet" />
		<Using Include="SharpGL" />
		<Using Include="SharpGL.WPF" />
		<Using Include="SharpGL.SceneGraph.Shaders" />
		<Using Include="SharpGL.VertexBuffers" />
		<Using Include="cg_2.Source.Camera" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Source\Shaders\shader.frag">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="Source\Shaders\shader.vert">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>